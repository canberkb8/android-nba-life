<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_team_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TeamName"
            app:layout_constraintEnd_toEndOf="@+id/img_team_logo"
            app:layout_constraintStart_toStartOf="@+id/img_team_logo"
            app:layout_constraintTop_toBottomOf="@+id/img_team_logo" />

        <TextView
            android:id="@+id/txt_team_abbreviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TeamAbbreviation"
            app:layout_constraintEnd_toEndOf="@+id/txt_team_name"
            app:layout_constraintStart_toStartOf="@+id/txt_team_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_team_name" />

        <TextView
            android:id="@+id/txt_team_conference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TeamConference"
            app:layout_constraintEnd_toEndOf="@+id/txt_team_abbreviation"
            app:layout_constraintStart_toStartOf="@+id/txt_team_abbreviation"
            app:layout_constraintTop_toBottomOf="@+id/txt_team_abbreviation" />

        <TextView
            android:id="@+id/txt_team_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TeamDivision"
            app:layout_constraintEnd_toEndOf="@+id/txt_team_conference"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="@+id/txt_team_conference"
            app:layout_constraintTop_toBottomOf="@+id/txt_team_conference" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_team_players"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>